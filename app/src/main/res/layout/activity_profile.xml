<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.profile.AccountProfileActivity"
    android:orientation="vertical"
    android:paddingHorizontal="21dp"
    android:background="@android:color/white">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:tint="@android:color/black"
        android:layout_marginTop="15dp"
        android:id="@+id/profile_back"
        android:onClick="goToHome"/>
 <FrameLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="30dp"
     android:layout_gravity="center">
     <com.mikhaellopez.circularimageview.CircularImageView
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:enabled="false"
         android:adjustViewBounds="true"
         android:scaleType="centerCrop"
         app:civ_border_width=".1dp"
         app:civ_border_color="@android:color/transparent"
         android:src="@drawable/ic_man"
         android:layout_gravity="center"
         android:layout_marginTop="16dp"
         android:tint="#D4D4D4"
         />
     <com.mikhaellopez.circularimageview.CircularImageView
         android:layout_width="135dp"
         android:layout_height="135dp"
         android:enabled="false"
         android:adjustViewBounds="true"
         android:scaleType="centerCrop"
         android:id="@+id/profile__image"
         app:civ_border_width=".1dp"
         app:civ_border_color="@android:color/transparent"
       />

     <ImageView
         android:id="@+id/edit_profile_Image"
         android:layout_width="35dp"
         android:layout_height="35dp"
         android:layout_marginEnd="8dp"
         android:src="@drawable/ic_menu_camera"
         android:layout_gravity="end|bottom"
         android:background="@drawable/active_dot_primary"
         android:padding="10dp"
         android:tint="@android:color/white"
         android:layout_marginBottom="8dp"
         android:onClick="editProfileImage" />
 </FrameLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/null_icon"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/darkGreyBlue"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="21dp"
            android:layout_gravity="center"
            android:hint="User Name"
            android:id="@+id/user_name_profile"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phone_number_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/null_icon"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/darkGreyBlue"
            android:drawableStart="@drawable/ic_android_phone"
            android:drawablePadding="21dp"
            android:layout_gravity="center"
            android:hint="@string/phone_number"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/null_icon"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/darkGreyBlue"

            android:drawableStart="@drawable/password_icon"
            android:drawablePadding="21dp"
            android:layout_gravity="center"
            android:hint="Password"
            android:drawableTint="@color/goldenRod"
            android:id="@+id/password_profile"/>
    </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Gender"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/darkGreyBlue"
            android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/gender_profile_RG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/male"
            android:layout_weight="1"
            android:textColor="@color/darkGreyBlue"
            android:id="@+id/male_profile_RB"
            android:button="@drawable/checkbox_selector"
            android:buttonTint="@color/primaryColor"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/female"
            android:layout_weight="1"
            android:textColor="@color/darkGreyBlue"
            android:id="@+id/female_profile_RB"
            android:button="@drawable/checkbox_selector"
            android:buttonTint="@color/primaryColor"/>

    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/null_icon"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/darkGreyBlue"
            android:drawableStart="@drawable/ic_height"
            android:drawablePadding="21dp"
            android:layout_gravity="center"
            android:hint="Height"
            android:id="@+id/user_height_profile"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/null_icon"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/darkGreyBlue"
            android:drawableStart="@drawable/ic_weight"
            android:drawablePadding="21dp"
            android:layout_gravity="center"
            android:hint="Weight"
            android:id="@+id/user_weight_profile"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/submit_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Update profile"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/login_button_background"
        android:onClick="updateUserInformation"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:id="@+id/update_profile_progress"/>
</LinearLayout>